{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"  
  },
  "globals": {
    "require": "readonly",
    "module": "readonly",
    "exports": "writable"  
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "off"
  },
  "ignorePatterns": [
    ".eslintrc.js"  
  ]
}