rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
   
    match /blogs/{blogId} {
      allow read: if true;
      
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
